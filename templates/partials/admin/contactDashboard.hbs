<section class="container py-5">
    <h5 class="text-center text-white">
        Welcome to the <span class="text-warning">Contact Dashboard</span>
    </h5>
</section>

<section class=" mb-5">
    <div class="card border-0">
        <div class="card-header bg-info d-flex justify-content-between align-items-center">
            <h5 class="text-white">Summary</h5>
            <form action="" method="post">
                <button type="submit" class="btn btn-danger btn-sm">
                    Load all
                </button>
            </form>
        </div>
        <div class="card-body p-0">
            <ul class="list-group">
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <h6 class="text-dark">
                        Message from {Name of the user}
                    </h6>
                    <button type="button" class="btn btn-info btn-sm" data-toggle="modal" data-target="#messageDetails">
                        Views Details
                    </button>
                </li>
            </ul>
        </div>
    </div>
</section>

<div class="modal" id="messageDetails">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Message Details</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body p-0">
                <ul class="list-group text-dark">
                    <li class="list-group-item">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text bg-white ">Name</span>
                            </div>
                            <p class="form-control">Name here</p>
                        </div>
                    </li>
                    <li class="list-group-item">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text bg-white ">mobile</span>
                            </div>
                            <p class="form-control">email here</p>
                        </div>
                    </li>
                    <li class="list-group-item">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text bg-white ">phone</span>
                            </div>
                            <p class="form-control">phone number here</p>
                        </div>
                    </li>
                    <li class="list-group-item">
                        <p class="form-control">Message here</p>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>