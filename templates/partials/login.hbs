{{!-- This partial is for login which will be loaded inside the modal --}}

<div class="global-container">
    <div id="loginCard" class="card login-form">
        <div class="card-header text-center">Log in</div>
        <div class="card-body">
            <div class="card-text">
                <form class="form" action="/login" method="POST">
                    <div class="form-group">
                        <label for="loginEmail">Email address</label>
                        <input type="email" class="form-control form-control-sm" id="loginEmail" name="email"/ required>
                    </div>
                    <div class="form-group">
                        <label for="loginPassword">Password</label>
                        <a href="#" style="float: right; font-size: 12px">Forgot password?</a>
                        <input type="password" class="form-control form-control-sm" id="loginPassword" name="password"/ required>
                    </div>
                    <button type="submit" id="login_btn" class="btn btn-primary btn-block">Login</button>

                    <div class="sign-up">
                        Don't have an account? <a href="#">Create One</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>