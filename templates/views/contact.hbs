<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Contact</title>

  <link rel="stylesheet" href="css/contact.css">

  {{>headerInlcudes}}
</head>

<body>
  {{>header}}

  {{!-- --}}

  <div class="background">
    <div class="container">
      <div class="screen">

        <div class="screen-body">
          <div class="screen-body-item left">
            <div class="app-title">
              <span>CONTACT</span>
              <span>US</span>
            </div>
            <div class="app-contact">CONTACT INFO : +91 9451988451</div>
          </div>
          <div class="screen-body-item">
            <form class="app-form" action="/contact" method="POST">
              <div class="app-form-group">
                <input type="text" class="app-form-control" id="name" name="senderName" placeholder="NAME" required>
                 <span id="nameerr"></span>
              </div>
              <div class="app-form-group">
                <input type="email" class="app-form-control" id="email" name="senderEmail" placeholder="EMAIL" required>
                 <span id="emailerr"></span>
              </div>
              <div class="app-form-group">
                <input type="tel" class="app-form-control" id="phone" name="senderContact" placeholder="CONTACT NO" required>
                 <span id="phoneerr"></span>
              </div>
              <div class="app-form-group message">
                <input type="text" class="app-form-control" id="message" name="message" placeholder="MESSAGE" required>
                 <span id="msgerr"></span>
              </div>
              <div class="app-form-group buttons">
                <button type="submit" class="app-form-button" name="submitBtn">SEND</button>
              </div>
            </form>
          </div>
        </div>
      </div>

    </div>
  </div>


  {{!-- --}}

  {{>footer}}
</body>

</html>